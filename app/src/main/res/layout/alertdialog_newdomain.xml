<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout android:layout_width="match_parent"
        android:id="@+id/domainBoundContainer"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="25dp"
        android:orientation="horizontal" >
        
        <EditText android:id="@+id/lowerDomainBound"
            android:layout_width="105dp"
            android:maxLines="1"
            android:layout_gravity="center_vertical"
            android:scrollHorizontally="true"
  		    android:inputType="numberDecimal"
  		    android:layout_height="wrap_content" />
        
        <TextView android:text=" to "
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        
        <EditText android:id="@+id/upperDomainBound"
            android:layout_width="105dp"
            android:maxLines="1"
            android:layout_gravity="center_vertical"
            android:scrollHorizontally="true"
  		    android:inputType="numberDecimal"
  		    android:layout_height="wrap_content" />        
        
    </LinearLayout>
    
    <Button android:id="@+id/resetBoundValuesToMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Domain to Default"
        android:layout_centerHorizontal="true"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_below="@+id/domainBoundContainer" />

</RelativeLayout>