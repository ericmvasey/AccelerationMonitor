<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
	 
	   	<ImageView android:id="@+id/axisDefinitionsHelpGraph"
		    android:contentDescription="@string/axisDirTitle"
		    android:layout_width="wrap_content"
		    android:src="@drawable/axis_globe"
		    android:paddingTop="10dp"
		    android:layout_height="wrap_content"
		    android:layout_alignParentTop="true"
		    android:layout_centerHorizontal="true" />
	   	
		<TextView android:id="@+id/descriptionHelpGraph"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:textSize="18sp"
		    android:text="@string/axisDescription"
		    android:gravity="center"
	    	android:layout_below="@+id/axisDefinitionsHelpGraph" />
    
	</RelativeLayout>
	
</ScrollView>