<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/xStepRdioGroup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <RadioButton android:id="@+id/autoStepOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Automatic X Step"/>
    
    <RadioButton android:id="@+id/manualStepOption"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="Manual X Step"/>
    
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:orientation="horizontal" >
      	
      	<TextView android:text="Enter X Step Value:"
      	    android:paddingLeft="25dp"
      	    android:id="@+id/xStepValDescription"
      	    android:layout_width="wrap_content"
      	    android:layout_height="wrap_content" />
      	
      	<EditText android:id="@+id/xStepValEditText"
      	    android:layout_width="105dp"
      	    android:layout_height="wrap_content"
      	    android:scrollHorizontally="true"
  		    android:inputType="numberDecimal"
  		    android:maxLines="1" />
    </LinearLayout>

    
</RadioGroup>